$("ul.errors").html("")
<% if @song.errors.any? %>
  <% @song.errors.full_messages.each do |message| %>
    $("ul.errors").append($("<li />").html("<%= message.html_safe %>"))
  <% end %>
<% else %>
  $(".form-control").val(null)
  $(".song-show").html("<%= escape_javascript(render 'show') %>")
  $("#song-modal").modal("hide")
<% end %>
