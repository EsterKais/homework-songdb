<div class="container">
  <h1 class="artistsH1"> Artists </h1>
  <!-- FILTERING -->
    <div class="filtering">
      <div class="filter-items"><%= link_to "Order by Name", order_by_name_artists_path %></div>
      <div class="filter-items"><%= link_to "Order by Latest", order_by_date_artists_path %></div>
    </div>
  <!-- END OF FILTERING -->

  <!-- ARTIST LIST -->
      <ul class="artists">
        <% @artists.each do |artist| %>
          <% @artist = artist %>
          <li class="artist-box">
            <% @artist.photos.each do |photo| %>
              <%= link_to artist_path(artist.id) do %>
                <%= image_tag photo.artist_image, :class => "imagelink" %>
                <div class="artist-name"><%= artist.name %></div>
              <% end %>
            <% end %>
          </li>
        <% end %>
      </ul>
</div>
<!-- END OF ARTIST LIST -->
